<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mmlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dip"
    android:background="@drawable/myshape">

    <ImageView
        android:contentDescription="@string/articleImageWidget"
        android:id="@+id/widget_pic"
        android:layout_width="150dip"
        android:scaleType="fitXY"
        android:layout_height="90dip"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="9dp"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/update"
        style="@android:style/TextAppearance.Medium"
        android:layout_width="fill_parent"
        android:layout_height="100dip"
        android:gravity="center_horizontal|center_vertical"
        android:layout_alignTop="@+id/widget_pic"
        android:layout_toRightOf="@+id/widget_pic"
        android:text="@string/staticText"></TextView>

</RelativeLayout>